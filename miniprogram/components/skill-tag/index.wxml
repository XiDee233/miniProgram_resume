<view class="skill-tag">
  <view class="tag-content" wx:if="{{!isEditing}}">
    <text class="tag-text">{{text}}</text>
    <view class="tag-actions">
      <text class="action-btn edit" bindtap="startEdit">编辑</text>
      <text class="action-btn delete" bindtap="onDelete">删除</text>
    </view>
  </view>
  <view class="tag-edit" wx:else>
    <input class="edit-input" 
           value="{{tempValue}}"
           focus="true"
           bindinput="onInput"/>
    <view class="edit-actions">
      <text class="action-btn cancel" bindtap="cancelEdit">取消</text>
      <text class="action-btn confirm" bindtap="saveEdit">确定</text>
    </view>
  </view>
</view>
