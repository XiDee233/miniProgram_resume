.skill-tag {
  display: inline-block;
  margin: 8rpx;
}

.tag-content {
  display: flex;
  align-items: center;
  background: #f5f7fa;
  border-radius: 32rpx;
  padding: 8rpx 24rpx;
}

.tag-text {
  font-size: 26rpx;
  color: #333;
}

.tag-actions {
  display: flex;
  gap: 12rpx;
  margin-left: 16rpx;
  opacity: 0;
  transition: opacity 0.2s;
}

.tag-content:hover .tag-actions {
  opacity: 1;
}

.action-btn {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
}

.action-btn.edit {
  color: #007aff;
}

.action-btn.delete {
  color: #ff3b30;
}

.tag-edit {
  background: #f5f7fa;
  border-radius: 8rpx;
  padding: 16rpx;
}

.edit-input {
  width: 100%;
  height: 64rpx;
  background: #fff;
  border-radius: 4rpx;
  padding: 0 16rpx;
  margin-bottom: 16rpx;
  font-size: 26rpx;
}

.edit-actions {
  display: flex;
  justify-content: flex-end;
  gap: 16rpx;
}

.action-btn.cancel {
  color: #666;
}

.action-btn.confirm {
  color: #007aff;
}
