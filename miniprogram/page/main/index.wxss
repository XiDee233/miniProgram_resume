/* 容器设置 */
.container {
  height: 100vh; /* 全屏高度 */
  display: flex;
  flex-direction: column;
  justify-content: space-evenly; /* 改为 space-evenly 实现均匀分布 */
  padding: 20rpx;
  box-sizing: border-box;
  position: relative;
  overflow: hidden;
}

/* slogan 样式 */
.slogan {
  font-size: 36rpx;
  color: #333;
  text-align: center;
  font-weight: bold;
  z-index: 2;
}

/* 输入框容器 */
.input-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  z-index: 2;
}

/* 主输入框样式 */
.main-input {
  width: 80%;
  height: 100rpx;
  border: 2rpx solid #ccc;
  border-radius: 50rpx;
  padding: 0 30rpx;
  font-size: 32rpx;
  background: rgba(255, 255, 255, 0.9);
}

/* 按钮容器 */
.button-container {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 2;
}

/* 超大按钮样式 */
.big-button {
  width: 80%;
  height: 120rpx !important;
  line-height: 120rpx;
  font-size: 40rpx !important;
  border-radius: 60rpx !important;
  background: #07c160 !important;
  color: white !important;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  margin: 0;
}

/* 按钮点击效果 */
.button-hover {
  transform: scale(0.95);
  opacity: 0.8;
}

/* 输入框提示文字样式 */
.placeholder-style {
  color: #999;
  font-size: 32rpx;
}

/* 背景容器样式修改 */
.background-examples {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  z-index: 1;
  justify-content: center; /* 新增水平居中 */
  overflow: hidden;
}

/* 示例气泡样式 */
.example-bubble {
  position: absolute;
  opacity: 0;
  color: rgba(0, 0, 0, 0.4);
  font-size: 32rpx;
  white-space: nowrap;
  animation: pulse 4s ease-in-out;
  text-align: center;
  /* 移除了 transform 和 left 的默认值 */
}

@keyframes pulse {
  0% {
    opacity: 0;
    transform: scale(0.9);
  }
  15% {
    opacity: 0.8;
    transform: scale(1.4);
  }
  75% {
    opacity: 0.8;
    transform: scale(1.4);
  }
  100% {
    opacity: 0;
    transform: scale(0.9);
  }
}

/* 动态设置 left 和 font-size */
.example-bubble[data-left] {
  left: attr(data-left)vw;
}

.example-bubble[data-size] {
  font-size: attr(data-size)rpx;
}